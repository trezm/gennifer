@gray-darkest: #2b2b2b;
@gray-footer-text: #BBBBBB;
@bright-green: @bright-green-100;

footer {
  * {
    box-sizing: initial;
  }

  h5 {
    font-size: 12px;
    color: @gray-footer-text;
    margin-bottom: 10px;
    text-align: left;
    .semibold;
    .uppercase;
  }
  a {
    text-decoration: none;
  }
  a:link, a:visited, a:active {
    color: #717171;
  }
  a:hover {
    text-decoration: none;
    color: @white;
  }
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  .footer-main {
    background-color: @gray-darkest;
    color: @white;
    position: relative;
    .box-sizing;
    padding: 40px 30px 60px 30px;
    .logo-row {
      padding-bottom: 20px;
    }
    .vision {
      width: 50%;
      display: inline-block;
      vertical-align: top;
    }
    .vision-text {
      font-size: 18px;
      line-height: 24px;
      color: @gray-footer-text;
      text-align: left;
      padding-right: 120px;
    }
    .vision-highlight {
      color: @bright-green;
      .semibold;
    }
    .split-columns {
      display: inline;
    }
    .footer-menu-items {
      width: 14%;
      display: inline-block;
      vertical-align: top;
    }
    .show-desktop {
      display: inline-block !important;
    }
    .show-mobile {
      display: none !important;
    }
    .middle-column {
      padding-left: 40px;
    }
    .menu-item-links {
      font-size: 14px;
      list-style-type: none;
      margin: 0;
      padding: 0;
      text-align: left;
      li {
        padding-bottom: 7px;
      }
    }
    .footer-logo {
      display: block;
      width: 167px;
      height: 57px;
    }
  }
  .footer-social {
    text-align: left;
    .fb-button, .linkedin-button, .twitter-button, .instagram-button {
      display: inline-block;
      svg {
        width: 16px;
        height: 16px;
        margin-right: 9px;
        fill: #717171;
      }
      &:hover {
        svg {
          fill: @white;
        }
      }
    }
  }
  .bottom-row {
    display: block;
    padding: 30px 0;
    .container-social {
      float: right;
      display: inline-block;
      width: 170px;
    }
    .container-copy {
      max-width: 620px;
      width: 80%;
      float: left;
      display: inline-block;
      .footer-copyright {
        color: @gray-footer-text;
        font-size: 12px;
        letter-spacing: 0.025em;
        text-align: left;
        margin-right: 25px;
        display: inline-block;
      }
      .footer-subnav {
        text-align: left;
        display: inline-block;
        a:link, a:visited, a:active {
          color: #717171;
          font-size: 12px;
          letter-spacing: 0.025em;
          &:nth-child(2) {
            margin: 0 20px;
          }
        }
        a:hover {
          color: @white;
          font-size: 12px;
          letter-spacing: 0.025em;
          &:nth-child(2) {
            margin: 0 20px;
          }
        }
      }
    }
  }
}

@media @tabletMQ {
  footer .bottom-row .container-copy {
    max-width: 475px;
  }
}

@media @tabletMQ, @phoneMQ {
  footer {
    .footer-main {
      .vision {
        width: 100%;
        display: block;
        .vision-text {
          padding-right: 0px;
        }
      }
      .footer-menu-items {
        width: 25%;
      }
      .middle-column {
        padding-left: 25px;
      }
    }
  }
}


@media @phoneMQ {
  footer {
    .footer-main {
      .split-columns {
        width: 49%;
        display: inline-block;
        vertical-align: top;
      }
      .footer-menu-items {
        width: 100%;
        display: block;
      }
      .show-desktop {
        display: none !important;
      }
      .show-mobile {
        display: block !important;
      }
      .bottom-row {
        .container-social {
          float: none;
          padding-bottom: 10px;
          width: 100%;
        }
        .container-copy {
          width: 100%;
          float: none;
        }
      }
    }
  }
}

